---
import '../style/main.css'
import Card from '../components/Card.astro';
import Base from "../layouts/base.astro";
import Hero from "../components/Hero.astro";
import Search from '../components/Search.astro';

const all = await Astro.glob('../pages/clearance/*.md');

---

<Base 
title="Clearance Sale | Mctech Fiji"
description="Discover unbeatable tech deals at the Clearance Sale from Mctech Computers Fiji. Explore a selection of discounted computer products, printers, accessories, and more. Don't miss your chance to grab high-quality tech products at incredible prices. "
keywords="Clearance sale, Mctech Computers Fiji, tech deals, discounted products, computer products, printers, accessories, incredible prices"
>
    <h1 class="h1">For Sale</h1>
    <Search/>
   <div class="grid grid-cols-1 md:grid-cols-4 gap-10 w-4/5 m-auto">
        {all.map(info => <Card { info } />)} 
    </div>
</Base>