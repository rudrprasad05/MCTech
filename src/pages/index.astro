---
import '../style/main.css'
import Base from "../layouts/base.astro";
import Hero from "../components/Hero.astro";
import HeroProductCards from '../components/HeroProductCards.astro';
import Contact from '../components/Contact.astro';
import Slider from '../components/Slider.astro';
import Carousel from '../components/Carousel.astro';
---

<Base 
title="Mctech Computers Fiji"
description="Explore a wide range of high-quality computers, printers, and network solutions at Mctech Computers Fiji. We offer top-notch computer products, printers, laptops, accessories, and networking equipment. Contact us for reliable tech services and support."
keywords="Mctech Computers, Fiji tech company, computer products, printers, networks, laptops, accessories, computer parts, monitors, software, tech services, support"
>

<Hero 
    title1="Providing Computer "
    title2="Services to Fiji"
    imgPath="/images/hero.png"
/>

<Slider />

<p class="h1" id="products">Our Products</p>

<div class="grid w-4/5 grid-cols-1 md:grid-cols-3 mx-auto gap-20 mb-20">

    <HeroProductCards 
        title="computer"
        imgPath="/images/computer.png"
        path="/computers"
    />
    <HeroProductCards 
        title="printers"
        imgPath="/images/printer.png"
        path="/printers"
    />
    <HeroProductCards 
        title="network"
        imgPath="/images/router.png"
        path="/networks"
    />
    <HeroProductCards 
        title="laptop"
        imgPath="/images/laptop.png"
        path="/laptop"
    />
    <HeroProductCards 
        title="accessories"
        imgPath="/images/accessories.png"
        path="/accessories"
    />
    <HeroProductCards 
        title="parts"
        imgPath="/images/ram.png"
        path="/parts"
    />
    <HeroProductCards 
        title="Clearance Stock"
        imgPath="/images/sale.png"
        path="/clearance"
    />
    <HeroProductCards 
        title="monitors"
        imgPath="/images/monitor.png"
        path="/monitors"
    />
    <HeroProductCards 
        title="software"
        imgPath="/images/software.png"
        path="/software"
    />
    <HeroProductCards 
        title="service & support"
        imgPath="/images/service.png"
        path="/serivce"
    />
    

</div>

<Carousel />

<div class="w-full bg-blue-700 h-min py-5 md:py-14 mb-20">
        
    <div class="flex items-center flex-col md:flex-row w-4/5  bg-procyon-highlight-purple h-min justify-between mx-auto">
        <p class="text-blue-50 text-2xl md:text-4xl font-extrabold h-min md:text-right text-center mb-2 md:mb-0">
            <span class="italic mr-1">Ready </span> <span> to work with us?</span>
        </p>
        <div class="">
        <a href="#contact">
            <button class="bg-blue-50 px-8 rounded-md py-2 mx-auto transition hover:bg-blue-200">Hire Us</button>
        </a>
        </div>
    </div>
    
</div>

<p class="h1" id="contact">Talk to Us Today</p>
<Contact/>

<style>

.buttons:hover{
    transition: 0.3s;
    background: #374151;
}

</style>


</Base>
