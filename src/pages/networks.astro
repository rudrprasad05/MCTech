---
import '../style/main.css'
import Card from '../components/Card.astro';
import Base from "../layouts/base.astro";
import Hero from "../components/Hero.astro";
import Search from '../components/Search.astro';

const all = await Astro.glob('../pages/networks/*.md');

---

<Base 
title="Networks | Mctech Fiji"
description="Build a robust network infrastructure with reliable network devices from Mctech Computers Fiji. Browse through a variety of routers, switches, and access points designed to ensure seamless connectivity and efficient data transfer. Elevate your network setup with our top-quality solutions."
keywords="Network devices, Mctech Computers Fiji, routers, switches, access points, robust network infrastructure, seamless connectivity, efficient data transfer, network setup"
>
    <h1 class="h1">Our Networks Collection</h1>
    <Search/>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-10 w-4/5 m-auto">
        {all.map(info => <Card { info } />)} 
    </div>

    
</Base>