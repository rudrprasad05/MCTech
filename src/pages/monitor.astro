---
import '../style/main.css'
import Card from '../components/Card.astro';
import Base from "../layouts/base.astro";
import Hero from "../components/Hero.astro";
import Search from '../components/Search.astro';

const all = await Astro.glob('../pages/monitor/*.md');

---

<Base 
title="Monitors | Mctech Fiji"
description="Enhance your visual experience with premium monitors from Mctech Computers Fiji. Explore a range of sizes and resolutions, from high-definition to ultra-wide, designed to elevate your work and entertainment. Find the ideal monitor to redefine your display setup"
keywords="Monitors, Mctech Computers Fiji, premium monitors, visual experience, high-definition, ultra-wide, display setup, sizes, resolutions"
>

    <h1 class="h1">Our Monitors Collection</h1>
    <Search/>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-10 w-4/5 m-auto">
        {all.map(info => <Card { info } />)} 
    </div>

    
</Base>